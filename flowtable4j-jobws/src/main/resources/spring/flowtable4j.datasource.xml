<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="cardRiskDBDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
              <property name="jndiName">
                     <value>java:comp/env/jdbc/CardRiskDB_SELECT_1</value>
              </property>
       </bean>
       <bean id="cardRiskDBDataSource_Insert" class="org.springframework.jndi.JndiObjectFactoryBean">
              <property name="jndiName">
                     <value>java:comp/env/jdbc/CardRiskDB_INSERT_1</value>
              </property>
       </bean>
       <!-- JDBC模板 -->
       <bean id="cardRiskDBTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
              <property name="dataSource" ref="cardRiskDBDataSource"/>
       </bean>

       <bean id="cardRiskDBInsertTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
              <property name="dataSource" ref="cardRiskDBDataSource_Insert"/>
       </bean>
</beans>