<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="pciAccountRiskDetailDBDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
              <property name="jndiName">
                     <value>java:comp/env/jdbc/PciAccountRiskDetailDB_S0_R</value>
              </property>
       </bean>

       <!-- JDBC模板 -->
       <bean id="pciAccountRiskDetailDBTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
              <property name="dataSource" ref="pciAccountRiskDetailDBDataSource"/>
       </bean>
</beans>